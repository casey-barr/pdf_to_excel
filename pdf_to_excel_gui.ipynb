    "import pandas as pd\n",
    "from appJar import gui\n",
    "from PyPDF2 import PdfFileWriter, PdfFileReader\n",
    "from pathlib import Path\n",
    "from PIL import Image, ImageTk\n",
    "import tabula\n",
    "\n",
    "# Define functions needed to process the files\n",
    "def pdf_to_excel(input_file, out_file):\n",
    "    \"\"\" Take a pdf file and translate the pages into an Excel spreadsheet format\n",
    "\n",
    "    Args:\n",
    "        input_file: The source PDF file\n",
    "        page_range: The total number of pages in the PDF\n",
    "        out_file: File name for the destination xlsx\n",
    "    \"\"\" \n",
    "    input_pdf = PdfFileReader(open(input_file, \"rb\"))\n",
    "\n",
    "    page_range = input_pdf.getNumPages()\n",
    "    page_range = '1-' + str(page_range)\n",
    "    \n",
    "    df = tabula.read_pdf(input_file, pages=page_range)\n",
    "    out_file = str(out_file) + '.xlsx'\n",
    "    writer = pd.ExcelWriter(out_file, engine='xlsxwriter')\n",
    "    df.to_excel(writer, index=False)\n",
    "    writer.close()\n",
    "    #?write.save() ?\n",
    "    \n",
    "    if(app.questionBox(\"File Save\", \"Output XLSX saved. Do you want to quit?\")):\n",
    "        app.stop()\n",
    "\n",
    "\n",
    "def validate_inputs(input_file, output_dir):\n",
    "    \"\"\" Verify that the input values provided by the user are valid\n",
    "\n",
    "    Args:\n",
    "        input_file: The source PDF file\n",
    "        output_dir: Directory to store the completed file\n",
    "\n",
    "    Returns:\n",
    "        True if error and False otherwise\n",
    "        List of error messages\n",
    "    \"\"\"\n",
    "    errors = False\n",
    "    error_msgs = []\n",
    "\n",
    "    # Make sure a PDF is selected\n",
    "    if Path(input_file).suffix.upper() != \".PDF\":\n",
    "        errors = True\n",
    "        error_msgs.append(\"Please select a PDF input file\")\n",
    "\n",
    "    # Check for a valid directory\n",
    "    if not(Path(output_dir)).exists():\n",
    "        errors = True\n",
    "        error_msgs.append(\"Please Select a valid output directory\")\n",
    "\n",
    "    return(errors, error_msgs)\n",
    "\"\"\"   # Check for a file name\n",
    "    if len(file_name) < 1:\n",
    "        errors = True\n",
    "        error_msgs.append(\"Please enter a file name\")\n",
    "\"\"\"\n",
    "\n",
    "def press(button):\n",
    "    \"\"\" Process a button press\n",
    "\n",
    "    Args:\n",
    "        button: The name of the button. Either Process of Quit\n",
    "    \"\"\"\n",
    "    if button == \"Process\":\n",
    "        src_file = app.getEntry(\"Input_File\")\n",
    "        dest_dir = app.getEntry(\"Output_Directory\")\n",
    "        out_file = app.getEntry(\"Output_name\")\n",
    "        errors, error_msg = validate_inputs(src_file, dest_dir)\n",
    "        if errors:\n",
    "            app.errorBox(\"Error\", \"\\n\".join(error_msg), parent=None)\n",
    "        else:\n",
    "            pdf_to_excel(src_file, Path(dest_dir, out_file))\n",
    "    else:\n",
    "        app.stop()\n",
    "\n",
    "# Create the GUI Window\n",
    "app = gui(\"PDF to Excel\", useTtk=True)\n",
    "app.setTtkTheme(\"default\")\n",
    "app.setSize(900, 500)\n",
    "\n",
    "# Add the interactive components\n",
    "app.addLabel(\"Choose Source PDF File\")\n",
    "app.addFileEntry(\"Input_File\")\n",
    "\n",
    "app.addLabel(\"Select Output Directory\")\n",
    "app.addDirectoryEntry(\"Output_Directory\")\n",
    "\n",
    "app.addLabel(\"Output File Name\")\n",
    "app.addEntry(\"Output_name\")\n",
    "\n",
    "app.addLabel(\"Written by Casey C. Barr\")\n",
    "\n",
    "# link the buttons to the function called press\n",
    "app.addButtons([\"Process\", \"Quit\"], press)\n",
    "\n",
    "# start the GUI\n",
    "app.go()"
   ]
